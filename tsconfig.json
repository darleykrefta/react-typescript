{ 
  "compilerOptions": {
    "outDir": "./build",
    "sourceMap": true,
    "noImplicitAny": false,
    "module": "esnext",
    "moduleResolution": "node",
    "target": "es6",
    "lib": [
      "es2015", 
      "es2017",
      "dom" 
    ],
    "removeComments": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "allowJs": true,
    "baseUrl": "./src",
  },
  "include": [
    "src/**/*"
  ],
  "exclude": ["node_modules", "dist"]
}